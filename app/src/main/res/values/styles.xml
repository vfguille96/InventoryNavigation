<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/productsansregular</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeMaterial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeMaterialNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLogin" parent="AppTheme">
        <item name="android:checkboxStyle">@style/Widget.CheckBox</item>
    </style>

    <!-- Estilos con herencia -->
    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/secondary_text_material_light2</item>
    </style>
    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.CheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:tint">@color/secondary_text_material_light2</item>
        <item name="android:textColor">@color/primary_text_default_material_light2</item>
    </style>

</resources>
